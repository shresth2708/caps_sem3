generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  role           String          @default("user")
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  notifications  Notification[]
  purchaseOrders PurchaseOrder[]
  transactions   Transaction[]

  @@index([email])
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  color       String?    @default("#3B82F6")
  icon        String?
  parentId    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  parent      Category?  @relation("SubCategories", fields: [parentId], references: [id], onDelete: Cascade)
  children    Category[] @relation("SubCategories")
  products    Product[]  @relation("CategoryProducts")

  @@index([parentId])
}

model Supplier {
  id             Int             @id @default(autoincrement())
  name           String
  company        String?
  email          String?
  phone          String?
  address        String?
  rating         Float?          @default(0)
  paymentTerms   String?
  leadTimeDays   Int             @default(7)
  isActive       Boolean         @default(true)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  contact        String?
  products       Product[]
  purchaseOrders PurchaseOrder[]

  @@index([name])
}

model Product {
  id               Int             @id @default(autoincrement())
  sku              String          @unique @default(cuid())
  name             String
  description      String?
  categoryId       Int?
  supplierId       Int?
  unitPrice        Float?
  sellingPrice     Float?
  quantity         Int             @default(0)
  minStockLevel    Int             @default(10)
  reorderPoint     Int             @default(10)
  reorderQuantity  Int             @default(50)
  averageDailySale Float?
  unit             String          @default("pcs")
  barcode          String?
  qrCode           String?
  imageUrl         String?
  expiryDate       DateTime?
  batchNumber      String?
  isActive         Boolean         @default(true)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  category         String
  price            Float
  notifications    Notification[]
  categoryRef      Category?       @relation("CategoryProducts", fields: [categoryId], references: [id])
  supplier         Supplier?       @relation(fields: [supplierId], references: [id])
  purchaseOrders   PurchaseOrder[]
  transactions     Transaction[]

  @@index([name])
  @@index([sku])
  @@index([category])
  @@index([categoryId])
  @@index([supplierId])
  @@index([quantity])
}

model Transaction {
  id          Int      @id @default(autoincrement())
  productId   Int
  userId      Int
  type        String
  quantity    Int
  beforeQty   Int
  afterQty    Int
  unitPrice   Float?
  totalValue  Float?
  notes       String?
  referenceNo String?
  createdAt   DateTime @default(now())
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([userId])
  @@index([createdAt])
  @@index([type])
}

model PurchaseOrder {
  id            Int       @id @default(autoincrement())
  orderNumber   String    @unique @default(cuid())
  productId     Int
  supplierId    Int
  userId        Int
  quantity      Int
  unitPrice     Float
  totalAmount   Float
  status        String    @default("pending")
  orderDate     DateTime  @default(now())
  expectedDate  DateTime?
  deliveredDate DateTime?
  notes         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  product       Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  supplier      Supplier  @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([orderDate])
  @@index([productId])
  @@index([supplierId])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  productId Int?
  link      String?
  createdAt DateTime @default(now())
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@index([createdAt])
}
